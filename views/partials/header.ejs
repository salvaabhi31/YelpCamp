<!Doctype html>
<html>
    <head>
        <!-- Make site responsive on mobile/tablet -->
        <meta charset="utf-8">
       <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>
            YelpCamp
        </title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
        <link rel="stylesheet" href="/stylesheets/main.css">
    </head>
    <body>
        
       <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
          <div class="container">
                 <a class="navbar-brand" href="/">YelpCamp</a>
                 <button class="navbar-toggler" type="button" data-toggle="collapse"
                 data-target="#navbarSupportedContent" 
                 aria-controls="navbarSupportedContent" aria-expanded="false" 
                 aria-label="Toggle navigation">
                 <span class="navbar-toggler-icon">
                 </span>
                 </button>
                  <div id="navbarSupportedContent" class="collapse navbar-collapse">
                     <ul class="nav navbar-nav navbar-right ml-md-auto">
                     <li class="<%= typeof page !== 'undefined' && page === 'campgrounds' ? 'active' : '' %>" class="nav-item">
                         <a href="/campgrounds" class="nav-link">
                             Home
                         </a>
                      </li>
                     </ul>
                     <ul class="nav navbar-nav navbar-right">
                       <% if(!currentUser){ %>
                        <li class="<%= typeof page !== 'undefined' && page === 'login' ? 'active' : '' %>" class="nav-item">
                            <a href="/login" class="nav-link">
                                Login
                            </a>
                        </li>
                        <li class="<%= typeof page !== 'undefined' && page === 'register' ? 'active' : '' %>" class="nav-item">
                            <a href="/register" class="nav-link">
                                Sign Up
                            </a>
                        </li>
                       <% } else { %>
                         <li><a href="#">Signed In As <%= currentUser.username %></a></li>
                         <li><a  class="m-1" href="/logout">Logout</a></li>
                      <% } %>
                     </ul>
                   </div>
              </div>
        </nav>
     
     <div class="container">
         <% if(error && error.length>0){ %>
         <div class="alert alert-danger mt-2" role="alert">
             <%= error%>
         </div>
         <% }%>
         <% if(success && success.length>0){ %>
         <div class="alert alert-success mt-2" role="alert">
             <%= success%>
         </div>
         <% }%>
     </div>
     <div class="container">
         
         
         
     