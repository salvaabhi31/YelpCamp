 <%- include("../partials/header") %>

       
           <div class="row" style="display: block;">
              <h1 style="text-align: center;  margin: 10px auto;">Create a New CampGround!!</h1>
              <div style="width: 30%; margin: 30px auto;">
                     <form action="/campgrounds" method="POST">
                         <div class="form-group justify-content-center">
                             <input class="form-control" type="text" name="name" placeholder="campground name">
                         </div>
                         <div class="form-group">
                             <input class="form-control" type="number" name="price" placeholder="price" min=".01" step=".01">
                         </div>
                         <div class="form-group">
                             <input class="form-control" type="text" name="image" placeholder="image url">
                         </div>
                          <div class="form-group">
                             <input class="form-control" type="text" name="description" placeholder="description">
                         </div>
                         <div class="form-group">
                              <button class= "btn btn-lg btn-default btn-primary">Submit</button>
                         </div> 
                          <a href="/campgrounds">Back</a>
                     </form>
                </div>
              
              
           </div>
      
      

